<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_horizontal"
    android:background="@drawable/bg_product_item"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginBottom="10dp"
    >

    <ImageView
        android:id="@+id/img_product"
        android:layout_width="wrap_content"
        android:layout_height="150dp"
        android:src="@drawable/product1"
        android:layout_marginTop="31dp"
        />

    <TextView
        android:id="@+id/t_fullname"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_marginTop="14dp"
        android:textSize="15dp"
        android:text="[New 100%] Dell Inspiron 16 Plus 7620 - Intel Core i7 12700H | RAM 40GB | SSD 1TB | 16 inch' 3K"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        >

        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.500.000"
                android:textColor="@color/red"
                android:textSize="10dp" />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:text="đ"-->
<!--                android:textColor="@color/price"-->
<!--                android:textSize="7dp"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                />-->

        </LinearLayout>

        <LinearLayout
            android:layout_width="61dp"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            >

            <TextView
                android:id="@+id/t_price_old"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="25.500.000"
                android:textColor="@color/gray"
                android:textSize="8dp" />

<!--            <TextView-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_gravity="center_horizontal"-->
<!--                android:text="đ"-->
<!--                android:textColor="@color/price_old"-->
<!--                android:textSize="7dp" />-->

        </LinearLayout>



    </LinearLayout>

    <TextView
        android:id="@+id/tv_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="CPU: Ryzen 7 7735H\nRam: 16GB\nỔ Cứng: 512GB\nM.hình: 15.6’’ 2.5K cảm ứng\nCard: Intel Iris Xe Graphics"
        android:textSize="11dp"
        android:lineHeight="20dp"
        android:gravity="left"
        android:layout_marginTop="22dp"
        />

    <TextView
        android:id="@+id/btn_detail"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_marginTop="14dp"
        android:text="Xem chi tiết"
        android:textSize="8sp"
        android:textColor="@color/white"
        android:gravity="center"
        android:background="@drawable/btn_login"
        />

</LinearLayout>